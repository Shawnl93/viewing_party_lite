<%= form_with model: @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, 'Confirm password:' %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign Up to be a User" %>
<% end %>
